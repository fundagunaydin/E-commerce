{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profil{% endblock %}

{% block body %}

    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb">
                        <li><a href="index.html">AnaSayfa</a></li>
