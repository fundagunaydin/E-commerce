    <!-- Right Sidebar Container  -->
    <section class="page-section padding-30">
        <div class="container">
            <div class="row">
                <!-- Content -->

                <div class="col-md-9 col-md-push-3">
                    <div class="blog-listing">
                        <article>
                            <h2>Yorumlar</h2>
                            <hr class="title-underline">
                            <p>

                            <div class="widget-content nopadding">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Subject</th>
                                        <th>Comment</th>
                                        <th>Status</th>
                                        <th>İlan</th>
                                        <th>Created_at</th>
                                        <th>Rate</th>
                                        <th>Show</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for comment in comments %}
                                        <tr>
                                            <td>{{ comment.id }}</td>
                                            <td>{{ comment.subject }}</td>
                                            <td>{{ comment.comment }}</td>
                                            <td>{{ comment.status }}</td>
                                            <td>
                                                <a href="{{ path('emlak_show', {'id': comment.emlakid}) }}">{{ comment.title }}</a>
                                            </td>
                                            <td>{{ comment.created_at }}</td>
                                            <td>{{ comment.rate }}</td>
                                            <td>
                                                <a href="{{ path('admin_comment_show', {'id': comment.id}) }}"
                                                   class="btn  btn-success">Show</a>
                                            </td>
                                            <td>
                                                <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}"
                                                   class="btn  btn-info">Edit</a>
                                            </td>
                                            <td>
                                                {{ include('admin/comment/_delete_form.html.twig') }}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            </p>

                        </article>

                    </div>

                </div>

                <!-- Sidebar -->

                {{ include('user/usermenu.html.twig') }}

            </div>
        </div>
    </section>

