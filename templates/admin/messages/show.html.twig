{% extends 'adminbase.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <div id="content">
        <!--breadcrumbs-->
        <div id="content-header">
            <div id="breadcrumb"><a href="/admin" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>
                    Home</a> <a href="{{ path('admin_messages_index') }}">Contact Form Messages</a> <a href="#"
                                                                                                       class="current">Show</a>
            </div>
        </div>
        <!--End-breadcrumbs-->
        <!--Chart-box-->
        <div class="row-fluid">

            <div class="widget-title bg_lg"><span class="icon"><i class="icon-align-justify"></i></span>
                <h5>Show </h5>

            </div>

        </div>

        <div class="widget-content nopadding">
            <table class="table table-bordered table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ message.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ message.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ message.email }}</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td>{{ message.message }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ message.status }}</td>
                </tr>
                <tr>
                    <th>Ip</th>
                    <td>{{ message.ip }}</td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td>{{ message.note }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

