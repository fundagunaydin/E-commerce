{% extends 'adminbase.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    <!--main-container-part-->
    <div id="content">
        <!--breadcrumbs-->
        <div id="content-header">
            <div id="breadcrumb"><a href="/admin" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>
                    Home</a><a href="#">Contact Form Messages</a></div>
        </div>
        <!--End-breadcrumbs-->

        <div class="row-fluid">

            <br> <a href="{{ path('admin_messages_new') }}" class="btn btn-danger">Create new</a><br><br>


            <div class="widget-title bg_lg"><span class="icon"><i class="icon-align-justify"></i></span>
                <h5>Messages List </h5>
            </div>

            <div class="widget-content nopadding">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th>Status</th>
                        <th>Ip</th>
                        <th>Note</th>
                        <th>Show</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.id }}</td>
                            <td>{{ message.name }}</td>
                            <td>{{ message.email }}</td>
                            <td>{{ message.message }}</td>
                            <td>{{ message.status }}</td>
                            <td>{{ message.ip }}</td>
                            <td>{{ message.note }}</td>
                            <td>
                                <a href="{{ path('admin_messages_show', {'id': message.id}) }}"
                                   class="btn  btn-success">Show</a>
                            </td>
                            <td>
                                <a href="{{ path('admin_messages_edit', {'id': message.id}) }}" class="btn  btn-info">Edit</a>
                            </td>
                            <td>
                                {{ include('admin/messages/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}


