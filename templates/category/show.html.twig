{% extends 'adminbase.html.twig' %}
{% block title %}Category{% endblock %}
{% block body %}
    !--main-container-part-->
    <div id="content">
        <!--breadcrumbs-->
        <div id="content-header">
            <div id="breadcrumb"><a href="/admin" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>
                    Home</a><a href="{{ path('category_index') }}">Category</a> <a href="#" class="current">Show</a>
            </div>
        </div>
        <!--End-breadcrumbs-->
        <!--Chart-box-->
        <div class="row-fluid">
            <div class="widget-title bg_lg"><span class="icon"><i class="icon-align-justify"></i></span>
                <h5>Category List Table</h5>
            </div>
        </div>
        <div class="widget-content nopadding">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Parentid</th>
                    <td>{{ category.parentid }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ category.title }}</td>
                </tr>
                <tr>
                    <th>Keywords</th>
                    <td>{{ category.keywords }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ category.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ category.image }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ category.status }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
