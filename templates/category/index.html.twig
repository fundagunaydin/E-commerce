{% extends 'adminbase.html.twig' %}

{% block title %}Category Home Page{% endblock %}

{% block body %}
    <!--main-container-part-->
<div id="content">
<!--breadcrumbs-->
  <div id="content-header">
    <div id="breadcrumb"> <a href="/admin" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a><a href="{{ path('category_index') }}">Category</a></div>
  </div>
<!--End-breadcrumbs-->

<!--Chart-box-->
    <br><a href="{{ path('admin_category_new') }}" class="btn btn-danger" >Create new</a><br>

    <div class="widget-box">
      
        <div class="widget-title bg_lg"><span class="icon"><i class="icon-align-justify"></i></span>
          <h5>Category List Table</h5>
        </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th> Id</th>
                <th> Parentid</th>
                <th> Title</th>
                <th> Keywords</th>
                <th> Description</th>
                <th> Image</th>
                <th> Status</th>
                <th>Show </th>
                <th>Edit</th>
                <th>Delete </th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.parentid }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.image }}</td>
                <td>{{ category.status }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn  btn-success "> Show</a>
                </td>
                <td>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn  btn-success "> Edit</a>
                </td>
                 <td>
                     {{ include('category/_delete_form.html.twig') }}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


  </div>
</div>

   
{% endblock %}
